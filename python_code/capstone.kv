WindowManager:
    MainWindow:
    DataWindow:

<MainWindow>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Database"
            pos_hint: {'right': 1}
            size_hint: .2, None
            height: "60dp"
            on_release:
                app.root.current = "data"
                root.manager.transition.direction = "left"


<DataWindow>:
    name: "data"

    Button:
        text: "Go Back"
        pos_hint: {'left': 0}
        size_hint: .2, None
        height: "60dp"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"