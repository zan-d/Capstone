WindowManager:
    MainWindow:
        name: "main"
    DataWindow:
        name: "data"

<MainWindow>:
    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Database"
            pos_hint: {'right': 1}
            size_hint: .2, None
            height: "60dp"
            on_release:
                app.root.current = "data"
                root.manager.transition.direction = "left"

        Label:
            id: current_plant
            text: "choose plant"

        Button:
            text: "Fan"

        Button:
            text: "Water"

        Button:
            text: "Light"


<DataWindow>:
    d_view: d_view

    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Go Back"
            pos_hint: {'left': 0}
            size_hint: .2, None
            height: "60dp"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        ScrollView:
            id : d_view



